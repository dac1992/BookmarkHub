{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "types": ["chrome", "jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 